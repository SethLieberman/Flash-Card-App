<% if user_signed_in? || admin_signed_in? %>
<% @quizzes.each do |quiz| %>

<%= content_tag :p, "Question:#{quiz.question}?", class: "question"%>

<% if admin_signed_in? %>
<%= link_to "Delete Quiz", admin_destroy_user_path(quiz), method: :delete, data: { confirm: "You sure?" }, class: "delete-element" %>
<%end %>
<%= content_tag :p, "Answer: #{quiz.answer}", class: "answer" %>
<% end %>
<% end %>