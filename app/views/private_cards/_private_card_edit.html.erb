	

	<%= form_for card, remote: true, html: {method: :patch}, html: {class: "private-cards"} do |c| %>
				<%= c.label :Question %>
				<%= c.text_field :question %><br>
				<%= c.label :Answer %>
				<%= c.text_field :answer %><br>
				<%= c.label :Tag %>
				<%= c.select :tag, [['HTML','HTML'],['CSS','CSS'],['JS','JS'],['RUBY','RUBY'],['RAILS', 'RAILS'],['OTHER','OTHER']] %>
				<%= c.submit :Update %>
			<% end %>
