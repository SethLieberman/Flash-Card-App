
	<!-- form for creating new private card -->
	<%= form_for privateCard, remote: true, html: {method: :patch}, html: {class: "c-private-cards"} do |c| %>
		<%= c.label :Question %>
		<%= c.text_field :question %>
		<%= c.label :Answer %>
		<%= c.text_field :answer %>
		<%= c.label :Tag %>
		<%= c.select :tag, [['HTML','HTML'],['CSS','CSS'],['JS','JS'],['RUBY','RUBY'],['RAILS', 'RAILS'],['OTHER','OTHER']] %>
		<%= c.submit :Create %>
	<% end %>



